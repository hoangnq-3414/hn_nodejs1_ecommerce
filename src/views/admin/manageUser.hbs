<link rel='stylesheet' href='/css/admin/common.css' />
<link rel='stylesheet' href='/css/admin/admin_page.css' />
<link rel='stylesheet' href='/css/admin/user_manage.css' />
<link rel='stylesheet' href='/css/admin/common_admin.css' />
<link rel='icon' type='image/x-icon' href='../img/shop_icon.ico' />
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css'
  integrity='sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=='
  crossorigin='anonymous' referrerpolicy='no-referrer' />

<div class='wapper-form'></div>
<div class='form-user'>
  <h1>Thêm tài khoản</h1>
  <div class='user-input'>
    <span>{{t 'login.email'}}: </span>
    <input type='text' name='email' id='user-email' value='' placeholder='Nhập email' />
  </div>
  <div class='user-input'>
    <span>{{t 'order.name'}}:</span>
    <input type='text' name='ten' id='user-ten' value='' placeholder='Nhập tên' />
  </div>
  <div class='user-input'>
    <span>{{t 'login.password'}}:</span>
    <input type='password' name='mat-khau' id='user-mat-khau' value='' placeholder='Nhập mật khẩu' />
  </div>
  <div class='user-input'>
    <span>{{t 'home.avatar'}}:</span>
    <input type='file' name='user-avatar' id='user-avatar' accept='image/*' />
  </div>
  <div class='user-input input-img'>
    <div>
      <img alt='' />
      <div class='close-img'>
        <span><i class='fa-solid fa-xmark'></i></span>
      </div>
    </div>
  </div>
  <input type='hidden' name='user-id' id='user-id' value='' />
  <input type='hidden' name='user-close-image' id='user-close-image' value='0' />
  <div class='btn-form-user'>
    <div class='user-btn-cancel user-btn'><span>{{t
        'status.cancel'
        }}</span></div>
    <div class='user-btn-ok user-btn'><span>OK</span></div>
  </div>
</div>

<div class='title-function'>
  <span>{{t 'user.manage'}}</span>
</div>

<div class='search-user'>
  <input type='text' class='value-field' name='query-text' id='query-text' placeholder='Nhập email hoặc username'
    value='' tabindex='0' />
  <div class='nut-search-user'><i class='fa-solid fa-magnifying-glass'></i><span>{{t
      'home.search'
      }}</span></div>
  <div class='nut-them-user'><i class='fa-solid fa-square-plus'></i><span>{{t
      'user.addUser'
      }}</span></div>
</div>
<br />

<div class='container-xl'>
  <table class='table table-striped table-bordered board-result col-xl-12'>
    <thead class='text-center'>
      <tr>
        <th class='result-table-title head-stt'>STT</th>
        <th class='result-table-title head-id'>ID</th>
        <th class='result-table-title head-image'>{{t 'dashboard.image'}}</th>
        <th class='result-table-title head-name'>{{t 'register.full_name'}}</th>
        <th class='result-table-title head-email'>{{t 'login.email'}}</th>
        <th class='result-table-title head-operation'>{{t
          'user.operation'
          }}</th>
      </tr>
    </thead>
    <tbody>
      {{#each listUser}}
      <div class='detailUser text-center'>
        <tr>
          <td>
            <div class='data-details text-index'>
              <span>{{@index}}</span>
            </div>
          </td>
          <td>
            <div class='data-details'>
              <span>{{id}}</span>
            </div>
          </td>
          <td>
            <div class='data-details br-image'>
              <span><img src='{{image}}' /></span>
            </div>
          </td>
          <td>
            <div class='data-details'>
              <span class='td-div-username'>{{fullName}}</span>
            </div>
          </td>
          <td>
            <div class='data-details'>
              <span>{{email}}</span>
            </div>
          </td>
          <td>
            <div class='data-details'>
              <div class='table-edit' data-user-id='{{id}}'><i class='fa-solid fa-pen-to-square'></i>
                <span>{{i18n 'home.editButton'}}</span>
              </div>
              <div class='table-delete' data-user-id='{{id}}'><i class='fa-solid fa-trash'></i>
                <span>{{i18n 'home.deleteButton'}}</span>
              </div>
            </div>
          </td>
        </tr>
      </div>
      {{/each}}
    </tbody>
  </table>
  <br />
  <ul class='pagination'>
    {{#if paginationItemsLinks}}
    {{{paginationItemsLinks}}}
    {{/if}}
  </ul>
</div>

<script src='/js/admin/manage_acount.js'></script>
<script src='/js/sweetalert2@11.js'></script>

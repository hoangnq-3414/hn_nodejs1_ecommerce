<link href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' rel='stylesheet' />
<link rel='stylesheet' href='/css/profile.css' />
<div class='container'>
    <div class='row flex-lg-nowrap'>
        <div class='col'>
            <div class='row'>
                <div class='col mb-3'>
                    <div class='card'>
                        <div class='card-body'>
                            <div class='e-profile'>
                                <div class='row'>
                                    <div class='col-12 col-sm-auto mb-3'>
                                        <div class='mx-auto' id='img-container'>
                                            <div id='avatar-container'
                                                class='d-flex justify-content-center align-items-center rounded'>
                                                <div>
                                                    <img src='{{image}}' alt='' />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class='col d-flex flex-column flex-sm-row justify-content-between mb-3'>
                                        <div class='text-center text-sm-left mb-2 mb-sm-0'>
                                            <h4 class='pt-sm-2 pb-1 mb-0 text-nowrap'></h4>
                                            <p class='mb-0'></p>
                                            <div class='form-field' id='image-upload'>
                                                <input class='form-control' type='file' name='image-main' id='image'
                                                    accept='image/*' />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <ul class='nav nav-tabs'>
                                    <li class='nav-item'><a href='' class='active nav-link'>{{t
                                            'user.setting'
                                            }}</a></li>
                                </ul>
                                <div class='tab-content pt-3'>
                                    <div class='tab-pane active'>
                                        <div class='form' novalidate=''>
                                            <div class='row'>
                                                <div class='col'>
                                                    <input type="hidden" id="product-id" name="product-id" value="{{id}}">
                                                    <div class='row'>
                                                        <div class='col'>
                                                            <div class='form-group'>
                                                                <label>{{t 'product.productNameLabel'}}</label>
                                                                <input class='form-control' type='text' name='name'
                                                                    placeholder='name...' value='{{name}}' />
                                                                    <small class="form-text text-danger">{{t 'validate.productNameRequiredMessage'}}</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class='row'>
                                                        <div class='col'>
                                                            <div class='form-group'>
                                                                <label>{{t 'product.descriptionLabel'}}</label>
                                                                <input class='form-control' type='text' name='description'
                                                                    placeholder='description...' value='{{description}}' />
                                                                    <small class="form-text text-danger">{{t 'validate.descriptionRequiredMessage'}}</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class='row'>
                                                        <div class='col'>
                                                            <div class='form-group'>
                                                                <label>{{t 'product.priceLabel'}}</label>
                                                                <input class='form-control' type='number' name='price'
                                                                    placeholder='...' value='{{price}}' />
                                                                    <small class="form-text text-danger">{{t 'validate.priceRequiredMessage'}}</small>
                                                            </div>
                                                        </div>
                                                        <div class='col'>
                                                            <div class='form-group'>
                                                                <label>{{t 'product.quantityLabel'}}</label>
                                                                <input class='form-control' type='number' name='quantity'
                                                                    placeholder='...' value='{{quantity}}' />
                                                                    <small class="form-text text-danger">{{t 'validate.unitRequiredMessage'}}</small>
                                                            </div>
                                                        </div>
                                                        <div class='col'>
                                                            <div class='form-group'>
                                                                <label>{{t 'product.unitLabel'}}</label>
                                                                <input class='form-control' type='text' name='unit'
                                                                    placeholder='...' value='{{unit}}' />
                                                                    <small class="form-text text-danger">{{t 'validate.unitRequiredMessage'}}</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col">
                                                            <label >{{t 'product.additionalImagesLabel'}}</label>
                                                            <input class='form-control' type="file" name="images" id="images-second" multiple>
                                                        </div>
                                                    </div>
                                                    <div class='row'>
                                                        <div class='col'>
                                                            <label>{{t 'product.categoryLabel'}}</label>
                                                            <select class='form-select'
                                                                aria-label='Default select example' id='info'>
                                                                {{#each listCategory}}
                                                                <option value='{{id}}' >{{name}}</option>
                                                                {{/each}}
                                                            </select>
                                                            <small class="form-text text-danger">{{t 'validate.categoryInfoMessage'}}</small>
                                                            <br>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class='row'>
                                                <div class='col gap-4 d-flex justify-content-end'>
                                                    <button class='btn btn-primary' id='submit'>{{t 'product.submitButtonText'}}</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="error-message" class="error-message alert alert-danger" style="display: none; margin-top:20px"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src='/js/admin/admin.product.update.js'></script>
<script src='/js/sweetalert2@11.js'></script>

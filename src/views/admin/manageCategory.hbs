<link rel='stylesheet' href='/css/admin/common.css' />
<link rel='stylesheet' href='/css/admin/admin_page.css' />
<link rel='stylesheet' href='/css/admin/user_manage.css' />
<link rel='stylesheet' href='/css/admin/common_admin.css' />
<link rel='icon' type='image/x-icon' href='../img/shop_icon.ico' />
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css'
  integrity='sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=='
  crossorigin='anonymous' referrerpolicy='no-referrer' />

<div class='wapper-form'></div>
<div class='form-user'>
  <h1>{{t "product.addCategoryTitle"}}</h1>
  <div class='user-input'>
    <span>{{t 'order.name'}}: </span>
    <input type='text' name='email' id='user-email' value='' placeholder='Nhập tên sản phẩm' />
  </div>
  <div class='user-input'>
    <span>{{t 'detail.description'}}:</span>
    <input type='text' name='ten' id='user-ten' value='' placeholder='Nhập mô tả' />
  </div>
  <input type='hidden' name='user-id' id='user-id' value='' />
  <div class='btn-form-user'>
    <div class='user-btn-cancel user-btn'><span>{{t
        'status.cancel'
        }}</span></div>
    <div class='user-btn-ok user-btn'><span>OK</span></div>
  </div>
</div>

<div class='title-function'>
  <span>{{t "product.manageCategoryTitle"}}</span>
</div>

<div class='search-user'>
  <input type='text' class='value-field' name='query-text' id='query-text' placeholder='Nhập email hoặc username'
    value='' tabindex='0' />
  <div class='nut-search-user'><i class='fa-solid fa-magnifying-glass'></i><span>{{t
      'home.search'
      }}</span></div>
  <div class='btn-add-user'><i class='fa-solid fa-square-plus'></i><span>new cate</span></div>
</div>
<br />

<div class='container-xl'>
  <table class='table table-striped table-bordered board-result col-xl-12'>
    <thead class='text-center'>
      <tr>
        <th class='result-table-title head-id'>ID</th>
        <th class='result-table-title head-image'>{{t "product.nameLabel"}}</th>
        <th class='result-table-title head-name'>{{t "detail.description"}}</th>
        <th class='result-table-title head-operation'>{{t "user.operation"}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each listCategory}}
      <div class='detailUser text-center'>
        <tr>
          <td>
            <div class='data-details'>
              <span>{{id}}</span>
            </div>
          </td>
          <td>
            <div class='data-details'>
              <span class='td-div-username'>{{name}}</span>
            </div>
          </td>
          <td>
            <div class='data-details'>
              <span class="description">{{description}}</span>
            </div>
          </td>
          <td>
            <div class='data-details'>
              <div class='table-edit' data-user-id='{{id}}'><i class='fa-solid fa-pen-to-square'></i>
                <span>{{i18n 'home.editButton'}}</span>
              </div>
              {{#if disable}}
              <div class='table-delete cate-active' data-user-id='{{id}}'>
                <i class="fas fa-check-circle" aria-hidden="true"></i>
                <span>{{i18n 'product.activeLabel'}}</span>
              </div>
              {{else}}
              <div class='table-delete cate-disable' data-user-id='{{id}}'>
                <i class="fas fa-ban" aria-hidden="true"></i>
                <span>{{i18n 'product.disableLabel'}}</span>
              </div>
              {{/if}}
            </div>
          </td>
        </tr>
      </div>
      {{/each}}
    </tbody>
  </table>
  <br />
  <ul class='pagination'>
    {{#if paginationItemsLinks}}
    {{{paginationItemsLinks}}}
    {{/if}}
  </ul>
</div>
<script src='/js/admin/admin.category.js'></script>
<script src='/js/sweetalert2@11.js'></script>

<div class='container mt-5 mb-5'>
  <div class='row d-flex justify-content-center'>
    <div class='col-md-10'>
      <div class='card'>
        <div class='row'>
          <div class='col-md-6'>
            <div class='images p-3'>
              <div class='text-center p-4'>
                <img id='main-image' src='{{product.image}}' width='250' />
              </div>
              <div class='thumbnail text-center'>
                {{#each product.productImages}}
                <img onclick='change_image(this)' src='{{this.image}}' width='150' />
                {{/each}}
              </div>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='product p-4'>
              <div class='d-flex justify-content-between align-items-center'>
                <div class='d-flex align-items-center'>
                  <i class='fa fa-long-arrow-left'></i>
                  <span class='ml-1'><a href="/">{{t 'detail.back'}}</a></span>
                </div>
                <i class='fa fa-shopping-cart text-muted'></i>
              </div>
              <div class='mt-4 mb-3'>
                <h5 class='text-uppercase'>{{t 'detail.product_name'}}: {{product.name}}</h5>
                <p class='about'>{{t 'detail.description'}}: {{product.description}}</p>
                <div class='price d-flex flex-row align-items-center'>
                  <span class='act-price'>{{t 'detail.price'}}: {{product.price}}</span>
                </div>
                <div class='price d-flex flex-row align-items-center'>
                  <span class='act-price'>{{t 'detail.quantity'}}: {{product.quantity}}</span>
                </div>
                <div class='price d-flex flex-row align-items-center'>
                  <span class='act-price'>{{t 'detail.unit'}}: {{product.unit}}</span>
                </div>
                <div class='price d-flex flex-row align-items-center'>
                  <span class='act-price'>{{t 'detail.category'}}: {{product.category.name}}</span>
                </div>
              </div>
              <form action="/cart/add/{{product.id}}" method="post" style="display: inline;">
                <button type="submit" class="btn btn-outline-success">{{i18n 'home.add_to_cart'}}</button>
              </form>
              <i class='fa fa-heart text-muted'></i>
              <i class='fa fa-share-alt text-muted'></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
</head>
<body>
  <!-- from login -->
  <div class='login'>
    <div class='login__container'>
      <h1>{{t 'login.signin'}}</h1>
      {{#if accountDisable}}
        <p class="text-danger">{{t "login.accountDisableMessage"}}</p>
      {{/if}}
      <form method='post' action='/auth/login'>
        <h5>{{t 'login.email'}}</h5>
        <input type='text' class='input-login-username' name='email' />
        <h5>{{t 'login.password'}}</h5>
        <input type='password' class='input-login-password' name='password' />
        <button type='submit' class='login__signInButton'>{{t
          'login.signin'
          }}</button>
        <div class='flash-messages'>
          {{#if flash.notfound}}
          <p class='flash flash-error text-danger'>{{flash.notfound}}</p>
          {{/if}}
          {{#if flash.error}}
          <p class='flash flash-error text-danger'>{{flash.error}}</p>
          {{/if}}
        </div>
      <a href='/auth/register' class='login__registerButton'>{{t
        'login.cre_account'
        }}</a>
    </div>
  </div>
</body>
</html>

</html>

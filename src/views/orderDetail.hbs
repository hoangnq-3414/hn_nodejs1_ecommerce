<link rel="stylesheet" href="/css/product.info.css.css">
<link rel="stylesheet" href="/css/order.detail.css">
<div class='col-lg-12'>
  <div class='box-element'>
    <a class='btn btn-outline-dark' href='/order/userAllList'>&#x2190;
      {{t 'order.backToCart'}}</a>
    <hr />
    <h3>{{t 'order.orderSummary'}}</h3>
    <hr />
    <div class='cart-row'>
      <div style='flex:1'></div>
      <div style='flex:1'><strong>{{t 'cart.cartItems'}}</strong></div>
      <div style='flex:1'><strong>{{t 'detail.price'}}</strong></div>
      <div style='flex:1'><strong>{{t 'detail.quantity'}}</strong></div>
      <div style='flex:1'><strong>{{t 'detail.unit'}}</strong></div>
      <div style='flex:1'><strong>{{t 'order.totalAmount'}}</strong></div>
      <div style='flex:1'><strong>{{t 'order.evaluated'}}</strong></div>
    </div>
    {{#each orderDetail}}
    <div class='cart-row'>
      <div style='flex:1'><a href='/product/detail/{{product.id}}'><img class='row-image' src='{{product.image}}' /></a>
      </div>
      <div style='flex:1'>
        <p class='product-name'>{{product.name}}</p>
      </div>
      <div style='flex:1'>
        <p class='price'>{{price}}$</p>
      </div>
      <div style='flex:1'>
        <p class='quantity'>{{quantity}}</p>
      </div>
      <div style='flex:1'>
        <p class='unit'>{{product.unit}}</p>
      </div>
      <div style='flex:1'>
        <p class='total'></p>
      </div>
      {{#if reviewed}}
      <div style='flex:1'>
        <button class='btn-review btn btn-primary'>{{i18n 'order.reviewButton'}}</button>
      </div>
      {{else}}
      <div style='flex:1'>
        <a href='/product/detail/{{product.id}}' class='btn-buy-back btn btn-primary'>{{i18n 'order.buyButton'}}</a>
      </div>
      {{/if}}
    </div>
    <div class="bg-blur">
      <div class="review-form">
        <div class="d-flex">
          <h2>{{i18n 'order.reviewTitle'}}</h2>
        </div>
        <div class='col-md-2 '>
          <form class='rating' action='/product/rating' method='post'>
            <input type="hidden" name="productId" value="{{product.id}}">
            <input type="hidden" name="orderDetailId" value="{{id}}">
            <div class='star-input-wapper'>
              <label>
                <input type='radio' name='rating' value='1' />
                <span class='icon'>★</span>
              </label>
              <label>
                <input type='radio' name='rating' value='2' />
                <span class='icon'>★</span>
                <span class='icon'>★</span>
              </label>
              <label>
                <input type='radio' name='rating' value='3' />
                <span class='icon'>★</span>
                <span class='icon'>★</span>
                <span class='icon'>★</span>
              </label>
              <label>
                <input type='radio' name='rating' value='4' />
                <span class='icon'>★</span>
                <span class='icon'>★</span>
                <span class='icon'>★</span>
                <span class='icon'>★</span>
              </label>
              <label>
                <input type='radio' name='rating' value='5' />
                <span class='icon'>★</span>
                <span class='icon'>★</span>
                <span class='icon'>★</span>
                <span class='icon'>★</span>
                <span class='icon'>★</span>
              </label>
            </div>
            <textarea class='form-control' name="comment" id='exampleFormControlTextarea1' rows='3'></textarea>
            <div class="wapper-btns">
              <div class='btn-wapper'><button type="button" class='btn btn-danger btn-cancel'>{{i18n 'status.cancel'}}</button></div>
              <div class='btn-wapper'><button type="submit" class='btn btn-success'>{{i18n 'status.submit'}}</button></div>
            </div>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
    <ul class='pagination'>
      {{#if paginationItemsLinks}}
      {{{paginationItemsLinks}}}
      {{/if}}
    </ul>
  </div>
</div>

<script src='/js/user.order.detail.js'></script>

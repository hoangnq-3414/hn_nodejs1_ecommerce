<link href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' rel='stylesheet' />
<link rel='stylesheet' href='/css/home.css' />

<div class='container-xxl'>
  <div id='carouselExampleDark' class='carousel carousel-dark slide' style='width:100%'>
    <div class='carousel-indicators'>
      <button type='button' data-bs-target='#carouselExampleDark' data-bs-slide-to='0' class='active'
        aria-current='true' aria-label='Slide 1'></button>
      <button type='button' data-bs-target='#carouselExampleDark' data-bs-slide-to='1' aria-label='Slide 2'></button>
      <button type='button' data-bs-target='#carouselExampleDark' data-bs-slide-to='2' aria-label='Slide 3'></button>
    </div>
    <div class='carousel-inner'>
      <div class='carousel-item active'>
        <img src='/images/banner/b1.jpg' class='d-block w-100' alt='...' />
        <div class='carousel-caption d-none d-md-block'>
          <h5>First slide label</h5>
          <p>Some representative placeholder content for the first slide.</p>
        </div>
      </div>
      <div class='carousel-item'>
        <img src='/images/banner/b2.jpg' class='d-block w-100' alt='...' />
        <div class='carousel-caption d-none d-md-block'>
          <h5>Second slide label</h5>
          <p>Some representative placeholder content for the second slide.</p>
        </div>
      </div>
      <div class='carousel-item'>
        <img src='/images/banner/b3.jpg' class='d-block w-100' alt='...' />
        <div class='carousel-caption d-none d-md-block'>
          <h5>Third slide label</h5>
          <p>Some representative placeholder content for the third slide.</p>
        </div>
      </div>
    </div>
    <button class='carousel-control-prev' type='button' data-bs-target='#carouselExampleDark' data-bs-slide='prev'>
      <span class='carousel-control-prev-icon' aria-hidden='true'></span>
      <span class='visually-hidden'>{{t 'home.previous'}}</span>
    </button>
    <button class='carousel-control-next' type='button' data-bs-target='#carouselExampleDark' data-bs-slide='next'>
      <span class='carousel-control-next-icon' aria-hidden='true'></span>
      <span class='visually-hidden'>{{t 'home.next'}}</span>
    </button>
  </div>

  <div class='row'>
    <div class='col-md-3' style='margin-top: 50px;'>
      <div class='solid-border'>
        <h3>{{t 'home.search'}}</h3>
        <form class='d-flex' role='search' action='/product/search' method='GET'>
          <input class='form-control me-2' type='search' placeholder='...' aria-label='Search' name='searchText'
            value="{{searchText}}" />
          <button class='btn btn-outline-success' type='submit'><i class='fas fa-search'></i></button>
        </form>
        <h3>L·ªçc</h3>
        <form>
          <label class='priceLabel' for='priceRange'>{{t
            'home.priceLabel'
            }}</label><br />
          <input type='checkbox' id='under100' name='priceRange' value='under100' />
          <label for='under100'> &lt;100$</label><br />
          <input type='checkbox' id='100to199' name='priceRange' value='100to199' />
          <label for='100to199'>100$ - 199$</label><br />
          <input type='checkbox' id='200to299' name='priceRange' value='200to299' />
          <label for='200to299'>200$ - 299$</label><br />
          <input type='checkbox' id='300to399' name='priceRange' value='300to399' />
          <label for='300to399'>300$ - 399$</label><br />
          <input type='checkbox' id='400to499' name='priceRange' value='400to499' />
          <label for='400to499'>400$ - 499$</label><br />
          <input type='checkbox' id='over500' name='priceRange' value='over500' />
          <label for='over500'>&gt;500$</label><br />
        </form>
        <label class='priceLabel'>{{t 'home.productLineLabel'}}:</label>
        <br />
        {{#each category}}
        <input type='checkbox' id='{{id}}' name='category' value='{{id}}' />
        <label for='{{id}}'>{{name}}</label><br />
        {{/each}}
        <button onclick='searchProducts()' class='btn btn-outline-success'>
          <i class='fa fa-filter' aria-hidden='true'></i></button>
      </div>
    </div>

    <div class='col-md-9 float-right'>
      <div id='home_product' style="margin-top: 40px;">
        <div class='section-container'>
          <a class="selection-a" href="/">{{t 'home.newProductTitle' }}</a>
          <a class="selection-a" href="/product/topSelling">{{t 'home.bestSellerTitle' }}</a>
        </div>

        <div class='row'>
          {{#each topSelling}}
          <div class='col-lg-4' class='product-item'>
            <a href='/product/detail/{{id}}'>
              <img src='{{image}}' class='thumbnail' />
            </a>
            <div class='box-element product'>
              <h6><strong>{{name}}</strong></h6>
              <h6>{{i18n 'home.numberSoldLabel'}} {{numberSold}}</h6>
              <div class='description-wrapper'>
                <p class='description'>{{description}}</p>
                <button class='expand-button'>...</button>
              </div>
              <hr />
              <form action='/cart/add/{{id}}' method='post' class='form-cart'>
                <button type='submit' class='btn btn-outline-success'><i class='fas fa-shopping-cart'></i></button>
              </form>
              <a class='btn btn-outline-success' href='/product/detail/{{id}}'><i class='fa fa-eye'
                  aria-hidden='true'></i></a>
              <h4 class='float-right'><strong>{{price}}$</strong></h4>
            </div>
          </div>
          {{/each}}
        </div>
        <div class='row'>
          {{#each product}}
          <div class='col-lg-4'>
            <a href='/product/detail/{{id}}'>
              <img src='{{image}}' class='thumbnail' />
            </a>
            <div class='box-element product'>
              <h6><strong>{{name}}</strong></h6>
              <h6>{{i18n 'home.numberSoldLabel'}} {{numberSold}}</h6>
              <div class='description-wrapper'>
                <p class='description'>{{description}}</p>
                <button class='expand-button'>...</button>
              </div>
              <hr />
              <form action='/cart/add/{{id}}' method='post' class='form-cart'>
                <button type='submit' class='btn btn-outline-success'><i class='fas fa-shopping-cart'></i></button>
              </form>
              <a class='btn btn-outline-success' href='/product/detail/{{id}}'><i class='fa fa-eye'
                  aria-hidden='true'></i></a>
              <h4 class='float-right'><strong>{{price}}$</strong></h4>
            </div>
          </div>
          {{/each}}
        </div>
        <ul class='pagination'>
          {{#if paginationLinks}}
          {{{paginationLinks}}}
          {{/if}}
        </ul>
      </div>
      <link rel='stylesheet' href='/bootstrap/sweetalert2@11.js' />
      <script src='/bootstrap/sweetalert2@11.js'></script>
      {{#if flash.product_exist}}
      <script src='/js/custom.js'></script>
      {{/if}}
      <div class='row'>
        <div id='productList' class='row'></div>
      </div>
    </div>
  </div>

</div>
<script src='/js/home.js'></script>

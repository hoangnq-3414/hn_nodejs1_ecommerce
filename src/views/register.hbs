<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  </head>
  <body>
    <!-- form signup -->
    <div class='signup'>
      <div class='signup__container'>
        <h1>{{t 'register.signup'}}</h1>
        {{#if flash.existed}}
          <p class='flash flash-error'>{{flash.existed}}</p>
        {{/if}}
        <form action='/auth/register' method='post'>
          <h5>{{t 'register.full_name'}}</h5>
          <input type='text' class='input-login-username' name='fullName' />
          <h5>{{t 'register.email'}}</h5>
          <input type='email' class='input-signup-email' name='email' />
          <h5>{{t 'register.password'}}</h5>
          <input
            type='password'
            class='input-signup-password'
            name='password'
          />
          <h5>{{t 'register.confirm'}}</h5>
          <input
            type='password'
            class='input-signup-password'
            name='confirmPassword'
          />
          <button type='submit' class='signup__signInButton'>{{t
              'register.signup'
            }}</button>
        </form>
        <a href='/auth/login' class='signup__registerButton'>{{t
            'login.signin'
          }}</a>
      </div>
      {{#if errors}}
        <ul>
          {{#each errors}}
            <li>{{{msg}}}</li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </body>
</html>
